{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
